<ObjectHandles xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns="com.roguedevelopment.objecthandles.*" 
	allowRotate="true"
	objectRotatedEvent="dispatchEvent( new Event( OBJECT_ROTATED ) );"
	objectMovedEvent="dispatchEvent( new Event( OBJECT_MOVED ) );"
	objectResizedEvent="dispatchEvent( new Event( OBJECT_RESIZED ) );" >
	
	<mx:Script>
		<![CDATA[
			public static const OBJECT_ROTATED:String 	= "onObjectRotated";
			public static const OBJECT_MOVED:String		= "onObjectMoved";
			public static const OBJECT_RESIZED:String   = "onObjectResized";
		]]>
	</mx:Script>
	
	<mx:Image id="img" scaleContent="true" maintainAspectRatio="false" />
	
</ObjectHandles>
